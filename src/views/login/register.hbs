<div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gay-200 rounded-lg shodow-lg text-center">
    <h1 class="text-5x1 m-16 font-bold">Register</h1>
    <form action="" method="POST" class="nt-4">

        <input type="text" name="name" placeholder="Nombre" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white bg-gray-200" required>

        <input type="email" name="email" placeholder="Correo" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white bg-gray-200" required>

        <input type="password" name="password" placeholder="Contraseña" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white bg-gray-200" required>

        <textarea name="description" class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 focus:bg-white bg-gray-200" placeholder="Escriba una descripcion suya aquí. ejm: edad, hobbies, gustos..."></textarea>

        <button type="submit" class="rounded-md bg-blue-500 w-full text-lg text-white font-semibold p-2 my-3 hover:bg-blue-600 focus:bg-blue-700"> Send </button>

        {{#if error}}
        <p class="text-red-500 font-bold text-lg my-3">*{{error}}</p>

        {{/if}}
    </form>
</div>